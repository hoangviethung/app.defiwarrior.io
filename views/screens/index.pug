extends ../layouts/layout

block var
	- bodyClass = "farm-page"
	- pageTitle = "Farms | Defi x NFT"
block library-css
	link(rel="stylesheet", href="./vendors/fancyapps/fancybox.css")
block css
	link(rel="stylesheet", href="./css/farms.css")
block library-js
	script(src="./vendors/fancyapps/fancybox.umd.js")
block js
block main
	// *** SECTION BANNER *** //
	include ../components/banner
	// *** SECTION farm *** //
	section.farms
		.container
			.row
				-for(i=0;i<3;i++)
					.col-xl-4.col-sm-6
						.farm__item
							.farm__header
								.farm__character
									// Radio Image: 64x64
									img(src="./images/character_farm.png", alt="CHARACTER-DEFI")
								.character__information
									h4.character__name FiWA - BTC
									ul
										li.badge.outline.primary
											i.fas.fa-badge-check
											span Core
										li.badge.primary
											span 40X
							.farm__body
								.flex-between-alc
									.block
										span APR:
									.block
										i.fas.fa-calculator-alt
										span 59.67%
								.flex-between-alc
									.block
										span Earn:
									.block
										span GEM
								.farm__action
									.txt
										span.txt-primary CAKE
										span EARNED
									.flex-between-alc
										.block
											h2.txt-disable 0.000
