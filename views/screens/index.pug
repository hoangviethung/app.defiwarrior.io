extends ../layouts/layout

block var
	- bodyClass = "farm-page"
	- pageTitle = "Farms | Defi x NFT"
block library-css
	link(rel="stylesheet", href="./vendors/fancyapps/fancybox.css")
block css
	link(rel="stylesheet", href="./css/farms.css")
block library-js
	script( href="./vendors/fancyapps/fancybox.umd.js")
block banner
block js
block main
	// *** SECTION BANNER *** //
	include ../components/banner
	// *** SECTION farm *** //
	section.farms
		.container
			.row
				-for(i=0;i<9;i++)
					.col-xl-4.col-sm-6
						.farm__item
							.farm__header
								.farm__character
									img(src="./images/character_farm.png", alt="CHARACTER-DEFI")
								.character__information
									h4.character__name FiWA - BTC
									ul
										li.badge.outline.primary
											i.fas.fa-badge-check
											span Core
										li.badge.primary
											span 40X
							.farm__body
								.flex-between-alc
									.block
										span APR:
									.block
										i.fas.fa-calculator-alt
										span 59.67%
								.flex-between-alc
									.block
										span Earn:
									.block
										span GEM
								.farm__action
									.txt
										span.txt-primary CAKE
										span EARNED
									.flex-between-alc
										.block
											h2 0.000
										.block
											button.bt.bt-lg(disable) Harvest
									.txt
										span.txt-primary FiWA - BTC LP
										span STAKED
									.action_buttons
										button.bt.bt-lg.bt-block.secondary Unlock Wallet
							.farm__footer
								.ta-c
									button.bt.cl-primary
										span See More
										i.fad.fa-angle-down