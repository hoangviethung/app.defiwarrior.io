extends ../layouts/layout

block var
	- bodyClass = "buy-warrior-page"
	- pageTitle = "Buy Warrior | Defi x NFT"
block library-css
block css
	link(rel="stylesheet", href="./css/buy_gem.css")
block library-js
block js
block main
	section.trade.buy_gem
		.tabs.neutral-background-lighter
			.tabs__nav
				a.tabs__link(href="buy_warrior.html")
					.tabs__icon
						i.fad.fa-hammer-war
					.tabs__text Buy Warrior
				a.tabs__link.active(href="buy_gem.html")
					.tabs__icon
						i.fad.fa-shopping-cart
					.tabs__text Buy Gem
			.tabs__content
				.tabs__content__header.trade__header
					.box-left
						h2.trade__title Buy Gem
						p.trade__desc Use your Fiwa token to get Gem
					.box-right
						a.bt-circle.secondary(href="#")
							i.fad.fa-sliders-h
						a.bt-circle.secondary(href="#")
							i.fad.fa-history
				.tabs__content__body.trade__body
					.buy_gem__item
						label From
						.input-group
							input.form-control(type="number" placeholder="0.00")
							.input-group-append
								a.token__item.secondary-highlight(popup-to="select_token_popup" href="javascript:;")
									.token__information
										img.token__icon(src="./images/BTCB.png", alt="BTCB")
										span.token__name BTCB
									i.fad.fa-chevron-down
					.buy_gem__reverse
						button.bt.cl-secondary
							i.fad.fa-sort-alt
					.buy_gem__item
						label To
						.input-group
							input.form-control(type="number" placeholder="0.00")
							.input-group-append
								a.token__item.secondary-highlight(popup-to="select_token_popup" href="javascript:;")
									img.token__icon(src="./images/BTCB.png", alt="BTCB")
									span.token__name BTCB
									i.fad.fa-chevron-down
				.tabs__content__footer.trade__footer
					a.bt.bt-lg.bt-block.secondary(popup-to="wallet_connect_popup" href="javascript:;") Connect wallet