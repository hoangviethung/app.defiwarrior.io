extends ../layouts/layout

block var
	- bodyClass = "exchange-page"
	- pageTitle = "Exchange | Defi x NFT"
block library-css
block css
	link(rel="stylesheet", href="./css/exchange.css")
block library-js
block js
block main
	section.trade.exchange
		.tabs.primary
			.tabs__nav
				a.tabs__link.active(href="exchange.html")
					.tabs__icon
						i.fad.fa-sync
					.tabs__text Swap
				a.tabs__link(href="liquidity.html")
					.tabs__icon
						i.fad.fa-dollar-sign
					.tabs__text Liquidity Pool
			.tabs__content
				.trade__header
					.box-left
						h2.trade__title Exchange
						p.trade__desc Trade tokens in an instant
					.box-right
						a.bt-circle.secondary(href="#")
							i.fad.fa-sliders-h
						a.bt-circle.secondary(href="#")
							i.fad.fa-history
				.trade__body
					.exchange__item
						label From
						.input-group
							input.form-control(type="number" placeholder="0.00")
							.input-group-append
								a.token__item(popup-to="select_token_popup" href="javascript:;")
									.token__information
										img.token__icon(src="./images/BTCB.png", alt="BTCB")
										span.token__name BTCB
									i.fad.fa-chevron-down
					.exchange__reverse
						button.bt.cl-secondary
							i.fad.fa-sort-alt
					.exchange__item
						label To
						.input-group
							input.form-control(type="number" placeholder="0.00")
							.input-group-append
								a.token__item(popup-to="select_token_popup" href="javascript:;")
									img.token__icon(src="./images/BTCB.png", alt="BTCB")
									span.token__name BTCB
									i.fad.fa-chevron-down
				.trade__footer
					button.bt.bt-lg.bt-block.primary(popup-to="wallet_connect_popup" href="javascript:;") Unlock Wallet